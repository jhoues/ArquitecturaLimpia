@using BaseLibrary.Entities
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.Popups
@inject SfDialogService dialogService

<SfDialog Width="350px" IsModal="true" ShowCloseIcon="true" @bind-Visible="IsVisible">
    <Syncfusion.Blazor.Popups.DialogEvents OnOpen="OpenDialog"> </Syncfusion.Blazor.Popups.DialogEvents>

    <DialogTemplates>
        <Header> @Title Country </Header>
        <Content>
            <EditForm Model="Country" OnValidSubmit="Save">
                <div class="card border-success">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="form-label">Id</label>
                            <input @bind="Country.Id" class="form-control" disabled/>
                        </div>
                        <div class="form-group">
                            <label class="form-label">Name</label>
                            <InputText @bind-Value="Country.Name" class="form-control" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <button class="btn btn-primary float-end" type="submit">Guardar</button>
                    </div>
                </div>
            </EditForm>
        </Content>
    </DialogTemplates>
</SfDialog>

@code {
    [Parameter] public Country Country { get; set; } = new();
    [Parameter] public EventCallback<Country> HandleSaveOperationEvent { get; set; }
    private bool IsVisible { get; set; } = false;
    public string Title { get; set; } = "Add";
    private async void Save()
    {
        if (string.IsNullOrEmpty(Country.Name))
            await dialogService.AlertAsync("Tu necesitas asignar un departamento.", "Alerta!!");
        else
            await HandleSaveOperationEvent.InvokeAsync(Country);
    }
    public void OpenDialog()
    {
        IsVisible = true;
        StateHasChanged();
    }
    public void ChangeTitle(string title)
    {
        Title = title;
    }   
}



